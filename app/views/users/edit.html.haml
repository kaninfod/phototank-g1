.register-box
  .register-logo
    %a{:href => "../../index2.html"}
      %b> Photo
      tank
  .register-box-body
    %p.login-box-msg Edit user information
    = form_for @user do |form|
      .form-group.has-feedback
        = form.text_field :name, {:class=>"form-control", :placeholder => "Full name"}
        %span.glyphicon.glyphicon-user.form-control-feedback
      .form-group.has-feedback
        = form.email_field :email, {:class=>"form-control", :placeholder => "Email"}
        %span.glyphicon.glyphicon-envelope.form-control-feedback
      .form-group.has-feedback
        = form.text_field :avatar, {:class=>"form-control", :placeholder => "Url to avatar"}
        %span.glyphicon.glyphicon-lock.form-control-feedback
      .row
        .col-xs-4
          %button.btn.btn-primary.btn-block.btn-flat{:type => "submit"} Save
