
.register-box
  .register-logo
    %a{:href => "sign_in"}
      %b> Phototank
  .register-box-body
    %p.login-box-msg Register a new account
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .form-group.has-feedback
        = f.text_field :name, autofocus: true, placeholder: "Full name", type: "text", class: "form-control"
        %span.glyphicon.glyphicon-user.form-control-feedback
      .form-group.has-feedback
        = f.email_field :email, autofocus: true, placeholder: "Email", type: "text", class: "form-control"
        %span.glyphicon.glyphicon-envelope.form-control-feedback
      .form-group.has-feedback
        = f.password_field :password, autocomplete: "off", placeholder: "Password", type: "password", class: "form-control"
        %span.glyphicon.glyphicon-lock.form-control-feedback
      .form-group.has-feedback
        = f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Retype password", :type => "password", class: "form-control"
        %span.glyphicon.glyphicon-log-in.form-control-feedback
      .row
        .col-xs-8
          .checkbox
            %label
              %input{:type => "checkbox"}
                I agree to the
                %a{:href => "#"} terms
        / /.col
        .col-xs-4
          %button.btn.btn-primary.btn-block.btn-flat{:type => "submit"} Register
        / /.col
    .social-auth-links.text-center
      %p - OR -
      %a.btn.btn-block.btn-social.btn-facebook.btn-flat{:href => "#"}
        %i.fa.fa-facebook
        Sign up using
        Facebook
      %a.btn.btn-block.btn-social.btn-google.btn-flat{:href => "#"}
        %i.fa.fa-google-plus
        Sign up using
        Google+
    = render "devise/shared/links"
