                %li
                  %a.btn-floating.waves-effect.waves-light.grey.lighten-1{:href => "/catalogs/1/edit"}
                    %i.material-icons delete_forever

              %ul.info
                %li
                  .label Date
                  .content"=@photo.date_taken_formatted"
                %li
                  .label ID
