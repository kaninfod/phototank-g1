    -# state 1 - info with info
    .col.photo-action-card{:style => "margin:15px;" }
      .card
        .card-image.waves-effect.waves-block.waves-light
          .photo-action-widget
            .photo-action-widget.header
              .switch
                %label
                  Map
                  %input{:type => "checkbox"}/
                  %span.lever
                  Info
            .photo-action-widget.content
              %ul.card-action-buttons.vert
                %li
                  %a.btn-floating.waves-effect.waves-light.green{:href => "#"}
                    %i.material-icons thumb_up
                %li
                  %a.btn-floating.waves-effect.waves-light.orange.lighten-2{:href => "#"}
