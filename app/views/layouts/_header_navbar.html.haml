/ Header Navbar
%nav.navbar.navbar-static-top{:role => "navigation"}
  / Sidebar toggle button
  %a.sidebar-toggle{"data-toggle" => "offcanvas", :href => "#", :role => "button"}
    %span.sr-only Toggle navigation
  / Navbar Right Menu
  .navbar-custom-menu
    %ul.nav.navbar-nav
      / Messages: style can be found in dropdown.less
      %li.dropdown.messages-menu
        / Menu toggle button
        %a.dropdown-toggle#photo_bucket_panel{"data-toggle" => "dropdown", :href => "#"}
          %i.fa.fa-shopping-cart#photo_bucket_panel
          %span.label.label-success#bucket_counter
        %ul.dropdown-menu
          %li.header Photos in bucket
          %li
            / inner menu: contains the messages
            %span#photos_in_bucket
          %li.footer
            %a{:href => "/bucket"} Open Bucket
      / /.messages-menu
      / Notifications Menu
      %li.dropdown.notifications-menu
        / Menu toggle button
        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          %i.fa.fa-bell-o
          %span.label.label-warning 10
        %ul.dropdown-menu
          %li.header You have 10 notifications
          %li
            / Inner Menu: contains the notifications
            %ul.menu
              %li
                / start notification
                %a{:href => "#"}
                  %i.fa.fa-users.text-aqua
                  5 new members joined today
              / end notification
          %li.footer
            %a{:href => "#"} View all
      / Tasks Menu
      %li.dropdown.tasks-menu
        / Menu Toggle Button
        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          %i.fa.fa-flag-o
          %span.label.label-danger 9
        %ul.dropdown-menu
          %li.header You have 9 tasks
          %li
            / Inner menu: contains the tasks
            %ul.menu
              %li
                / Task item
                %a{:href => "#"}
                  / Task title and progress text
                  %h3
                    Design some buttons
                    %small.pull-right 20%
                  / The progress bar
                  .progress.xs
                    / Change the css width attribute to simulate progress
                    .progress-bar.progress-bar-aqua{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "20", :role => "progressbar", :style => "width: 20%"}
                      %span.sr-only 20% Complete
              / end task item
          %li.footer
            %a{:href => "#"} View all tasks
      / User Account Menu
      %li.dropdown.user.user-menu
        / Menu Toggle Button
        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          / The user image in the navbar
          %img.user-image{:alt => "User Image", :src => current_user.avatar.url}
            / hidden-xs hides the username on small devices so only the image appears.
            %span.hidden-xs=current_user.name
        %ul.dropdown-menu
          / The user image in the menu
          %li.user-header
            %img.img-circle{:alt => "User Image", :src => current_user.avatar.url}
              %p
                = current_user.name
                %small=current_user.created_at
          / Menu Body
          %li.user-body
            .col-xs-4.text-center
              %a{:href => "#"} Followers
            .col-xs-4.text-center
              %a{:href => "#"} Sales
            .col-xs-4.text-center
              %a{:href => "#"} Friends
          / Menu Footer
          %li.user-footer
            .pull-left
              %a.btn.btn-default.btn-flat{:href => "/users/edit"} Profile
            .pull-right
              = link_to('Logout', destroy_user_session_path, :method => :delete, :class=>"btn btn-default btn-flat")

      / Control Sidebar Toggle Button
