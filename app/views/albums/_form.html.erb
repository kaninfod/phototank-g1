

<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= form_for(@album) do |f| %>
				<div class="form-group">
			 	   <%= label_tag(:q, "Album name:") %>
				   <%= f.text_field(:name, class:"form-control") %>
				</div>
				<div class="form-group">
			 	   <%= label_tag(:q, "Start date:") %>
				   <%= f.datetime_field(:start, class:"form-control") %>
				</div>
				<div class="form-group">
			 	   <%= label_tag(:q, "End date:") %>
				   <%= f.datetime_field :end, class:"form-control" %>
				</div>
				<div class="form-group">
			 	   <%= label_tag(:q, "Make:") %>
				    <%= f.select :make, options_for_select(@makes, @album.make), {}, {class:"form-control"}  %>
				</div>
				<div class="form-group">
			 	   <%= label_tag(:q, "Model:") %>
				   <%= f.select :model, options_for_select(@models, @album.model), {}, {class:"form-control"}  %>
				</div>
				<div class="form-group">
			 	   <%= label_tag(:q, "Country:") %>
				   <%= f.select :country, options_for_select(@countries, @album.country), {}, {class:"form-control"}  %>
				</div>
				<div class="form-group">
			 	   <%= label_tag(:q, "City:") %>
				   <%= f.select :city, options_for_select(@cities, @album.city), {}, {class:"form-control"}  %>
				</div>

				<div>
				</div>

			    <div class="actions">
			      <%= f.submit class:"btn btn-default" %>
			    </div>

			<% end %>
		</div>
	</div>
</div>
