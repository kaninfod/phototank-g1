
<div class="row">
	<div class="col-lg-3">
		<h4>Catalogs</h4>
	</div>
</div>

<div class="row">
	<div class="pull-right col-md-1">
		<%= link_to "New catalog", "/catalogs/new", class:"btn btn-default"%>
	</div>
</div>


<div class="row">
	<div class="col-md-12">

		<table class="table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Storage path</th>
					<th>Watch path</th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				<% @catalogs.each do |catalog| %>
				<tr>
		
					<td><%= catalog.name %></td>
					<td><%= catalog.path %></td>
					<td><%= catalog.watch_path %></td>
					<td><%= catalog.catalogtype %></td>
					<td>
						<% if catalog.default %>
							Master
						<% end %>
					
					</td>
					<td>
						<% if catalog.online %>
							<%= icon('toggle-on') %>
						<% else %>
							<%=icon('toggle-off') %>
						<% end %>
					
					</td>
					<td><%= link_to icon('cloud-upload'), action: 'import', id: catalog %></td>
					<td><%= link_to icon('picture-o'), action: 'show', id: catalog %></td>
					<td><%= link_to icon('pencil'), action: 'manage', id:catalog %></td>

        
				</tr>
				<% end %>
			</tbody>
		</table>

		<div class="col-sm-6 col-sm-offset-3">
			<%= paginate @catalogs, :theme => 'twitter-bootstrap-3' %>
		</div>
	</div>
</div>



