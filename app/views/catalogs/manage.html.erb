<div class="row">
	<div class="col-lg-3">
		<h4><%= @catalog.name %> <small>Manage Catalog</small></h4>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-lg-6">
			<div class="panel panel-default">
				<div class="panel-body">
					<%= form_for(@catalog.becomes(Catalog)) do |f| %>
					<div class="form-group">
						<%= label_tag(:q, "Catalog name:") %>
						<%= f.text_field(:name, class:"form-control") %>
					</div>
					<div class="form-group">
						<%= label_tag(:q, "Storage path:") %>
						<%= f.text_field(:path, class:"form-control") %>
					</div>
					<div class="form-group">
						<%= f.select(:type, options_for_select(@catalog_options),{}, {class:"form-control"}	) %>
					</div>
					<div class="actions">
						<%= f.submit class:"btn btn-default" %>
					</div>

				
				
					<%= button_tag("Upload", action: 'upload', class:"btn btn-default")%>
				
				
				
					<% end %>

				</div>
			</div>

				
		
		</div>
	</div>
	
	<div class="row">
		<%= form_tag("manage", method: "get") do %>
		<%= render "albums/list" %>
		<div class="actions">
			<%= submit_tag("Clone", {class:"btn btn-default"})   %>
		</div>
		<% end %>
		
	</div>
	
	<div class="row">
		<%= form_tag("manage", method: "get") do %>
		<%= render "list" %>
		<div class="actions">
			<%= submit_tag("Clone", {class:"btn btn-default"})   %>
		</div>
		<% end %>
		
	</div>
	
	
	<div class="row">
		<%= form_tag("manage", method: "get") do %>
		<%= render "watchpath" %>
		<div class="actions">
			<%= submit_tag("update", class:"btn btn-default") %>
		</div>
		<% end %>
		
	</div>
	
	<div  class="row">

	</div>
	
</div>




