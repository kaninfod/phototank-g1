=content_for :title, "Info"
=content_for :subtitle, "Photo taken #{@photo.date_taken_formatted}"
.row

.row
  - if @size == 'medium'
    .col-md-6
      .box.box-primary
        .box-header.with-border
          %h3.box-title Photo
          = render :partial => "photos/show/photo_size_toolbar"
          .box-body
            = image_tag "/photofiles/#{@photo.md_id.to_s}/photoserve", {style:"margin: 0 auto;image-orientation:90deg;", class: "img-responsive"}

  - else
    .col-md-12
      .box.box-primary
        .box-header.with-border
          %h3.box-title Photo
          = render :partial => "photos/show/photo_size_toolbar"
          .box-body
            = image_tag "/photofiles/#{@size}/photoserve", {style:"margin: 0 auto;image-orientation:90deg;", class: "img-responsive"}


  - if @size == 'medium'
    .col-md-6
      = render "info"
