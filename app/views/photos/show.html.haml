
.row
  - if @size == 'medium'
    .col-md-6
      .box.box-primary
        .box-header.with-border
          %h3.box-title Information
          = render :partial => "photos/show/photo_size_toolbar"
          .box-body
            = image_tag "/photos/#{@photo.id.to_s}/image/#{@size}", {style:"margin: 0 auto;image-orientation:90deg;", class: "img-responsive"}

  - else
    .col-md-12
      .box.box-primary
        .box-header.with-border
          %h3.box-title Information
          = render :partial => "photos/show/photo_size_toolbar"
          .box-body
            = image_tag "/photos/#{@photo.id.to_s}/image/#{@size}", {style:"margin: 0 auto;image-orientation:90deg;", class: "img-responsive"}


  - if @size == 'medium'
    .col-md-6
      = render "info"
