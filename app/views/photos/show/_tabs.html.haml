.nav-tabs-custom
  %ul.nav.nav-tabs
    %li.active
      %a{"data-toggle" => "tab", :href => "#tab_1"} Details
    %li
      %a{"data-toggle" => "tab", :href => "#tab_2"} Comments
    %li
      %a{"data-toggle" => "tab", :href => "#tab_3"} Timeline
    %li.pull-right
      %a.fa.fa-caret-square-o-down.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
      %ul.dropdown-menu
        %li
          %a{:href => "/photos/#{photo.id}/rotate/"} Rotate
        %li
          %a{:href => "/photos/#{photo.id}/edit"} Edit data
        %li
          %a.delete_photo{:href => "#", :photo_id=>photo.id} Delete
        %li
          %a{:href => "/photofiles/#{photo.org_id.to_s}/photoserve", :download=>true} Download

  .tab-content
    #tab_1.tab-pane.active
      =render :partial => "photos/show/details", :locals => {:photo => photo }
    #tab_2.tab-pane
      =render :partial => "photos/show/comments_widget", :locals => {:photo => photo }
    #tab_3.tab-pane
      =render :partial => "photos/show/timeline"
