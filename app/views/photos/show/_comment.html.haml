
.card-panel.grey.lighten-5.z-depth-1{:style=>"padding: 5px;"}
  .row.valign-wrapper
    .col.s3
      %img.circle.responsive-img{:alt => "", :src => comment.user.avatar}
    .col.s9.comment-text
      %span.text-bold
        =comment.user.name
      %span.right-align
        =time_ago_in_words(comment.created_at)
      %br.black-text
        =comment.comment
