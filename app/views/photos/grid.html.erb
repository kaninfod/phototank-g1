<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row">
		<% if defined?(@album) %>
			<h3><%= @album.name %></h3>
		<% end %>
	</div>
	<div class="row">
		<% @photos.each do |photo| %>
		<div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
			<a href="<%= '/photos/' + photo.id.to_s %>" class="thumbnail">
				<img src="<%= '/photos/' + photo.id.to_s + '/image/small' %>" alt="Responsive image">
			</a>
		</div>
		
		<% end %>
		<div class="row">
			<div class="col-sm-6 col-sm-offset-3">
				<%= paginate @photos , :theme => 'twitter-bootstrap-3'%>
			</div>
		</div>
	</div>

</div>


