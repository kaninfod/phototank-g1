
.box.box-primary
  .box-header.with-border
    %h3.box-title Photo Details
    .box-tools.pull-right
      %button.btn.btn-box-tool{"data-widget" => "collapse", :type => "button"}
        %i.fa.fa-minus
    .box-body

      %dl
        %dt Date taken:
        %dd= @photo.date_taken.strftime("%b %d %Y %H:%m")
        - if not @photo.location == Location.no_location
          %dt Country
          %dd= @photo.location.country
          %dt City
          %dd= @photo.location.city
          %dt Address
          %dd
            %address= @photo.location.address
          %dt Map
          %dd
            = image_tag @photo.location.get_map(zoom=10, size="350x300")
        %dt Make:
        %dd= @photo.make
        %dt Model
        %dd= @photo.model

        %dt Filename:
        %dd.truncate= @photo.filename
        %dt Original Path:
        %dd= @photo.path
        %dt Thumb Path:
        %dd= @photo.file_thumb_path
        %dt Extension:
        %dt Present in catalog(s):
        - @photo.catalogs.each do |catalog|
          %dd.truncate
            = catalog.name
            (#{@photo.absolutepath(catalog.id)})


:css
  .truncate {
    width: 250px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
