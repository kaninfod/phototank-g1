.photo-square
  .photo-content
    .photo-table
      .photo-table-cell
        = link_to image_tag("/photos/#{photo.id.to_s}/image/small",{class: "rs"}), photo
        .photo-text.text-left.small
          %b Date taken:
        .photo-text.text-right
          %p= photo.date_taken.strftime("%b %d %Y %H:%m")
        .photo-text.text-center
          %ul.list-inline
            %li= check_box_tag 'bucket', 'accepted', (@bucket.include? photo.id), photo_id: photo.id, class: "bucket-check"
            %li{}>= '|'
            - if not photo.location_id.blank?
              %li
                %i.fa.fa-globe.show_map{"data-content" => "<img src='#{photo.location.get_map(zoom=4, size="250x200")}'/>", "data-html" => "true", "data-toggle" => "popover", "data-trigger" => "focus", :role => "button", :tabindex => "0"}
                %li{}>= '|'
            %li
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                %i.fa.fa-caret-square-o-down
              %ul.dropdown-menu
                %li
                  %a.fa.fa-repeat{:href => "#"}>= '  Rotate'
                %li
                  %a.fa.fa-trash-o{:href => "#"}>= '  Delete'
                %li
                  %a.fa.fa-download{:href => "#"}>= '  Download'
