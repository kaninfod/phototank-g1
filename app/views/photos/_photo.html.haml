.photo-widget
  .photo-widget-header
    .photo-widget-overlay{:class => ("bucket" if @bucket.include? photo.id)}
      .text-center In Bucket
    %img{:photo_id=>(photo.id), :src=>"/photos/#{photo.id.to_s}/image/small"}

  .photo-widget-footer
    .photo-tool.btn-group.btn-group-justified.btn-group-xs{:role=>"group"}
      .btn-group{:role=>"group"}
        %a.fa.fa-caret-square-o-down.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
        %ul.dropdown-menu
          %li
            %a{:href => "#"} Rotate
          %li
            %a{:href => "#"} Edit data
          %li
            %a{:href => "#"} Delete
          %li
            %a{:href => "/photos/#{photo.id.to_s}/image/original", :download=>true} Download

      %a.btn.btn-default.fa.fa-eye{:type=>"button",:href=>"/photos/#{photo.id}"}

      %a.btn.btn-default.fa.fa-globe.show_map{"data-content" => "<img src='#{photo.location.get_map(zoom=4, size="250x200")}'/>", "data-html" => "true", "data-toggle" => "popover", "data-trigger" => "focus", :role => "button", :tabindex => "0"}


    .photo-title-label
      Date taken:
    .photo-title
      =photo.date_taken.strftime("%b %d %Y %H:%m")
